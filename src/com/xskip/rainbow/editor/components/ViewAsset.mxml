<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="200" height="500">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.events.ListEvent;
			
			private var _isRun:Boolean;
			
			protected function initHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				
			}

			protected function onChangeHandler(event:ListEvent):void
			{
				// TODO Auto-generated method stub
				// directory="File.applicationStorageDirectory"
			}
			
			protected function addtoStageHandler(event:Event):void
			{
				// TODO Auto-generated method stub
				_isRun=false;
				
				var fFile:File=File.applicationDirectory.resolvePath("assets/");
				fileSystemTree.directory=fFile;
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<mx:TabNavigator x="0" y="0" width="200" height="200">
		<s:NavigatorContent label="素材浏览" width="100%" height="100%">
			
		</s:NavigatorContent>
		<s:NavigatorContent label="目录" width="100%" height="100%">
			<mx:FileSystemTree addedToStage="addtoStageHandler(event)" id="fileSystemTree" width="100%" height="100%" change="onChangeHandler(event)"/> 
		</s:NavigatorContent>
	</mx:TabNavigator>
</s:Group>
